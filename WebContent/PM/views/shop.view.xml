<core:View xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:u="sap.ui.unified" 
		controllerName="mpn.PM.controller.shop" xmlns:html="http://www.w3.org/1999/xhtml">

	<Page xmlns="sap.m"
		id="shopPage"
		busy="false"
		busyIndicatorDelay="1000"
		visible="true"
		fieldGroupIds=""
		title="Geschäfte verwalten"
		titleLevel="Auto"
		showNavButton="{device>/system/phone}"
		showHeader="true"
		showSubHeader="true"
		navButtonText=""
		navButtonTooltip=""
		enableScrolling="true"
		icon=""
		backgroundDesign="Standard"
		navButtonType="Back"
		showFooter="true"
		contentOnlyBusy="false"
		floatingFooter="false"
		validateFieldGroup=""
		navButtonTap=""
		navButtonPress="onNavBack">
			<content>
        
				<List xmlns="sap.m"
					id="shopList"
					busy="false"
					busyIndicatorDelay="1000"
					visible="true"
					fieldGroupIds=""
					inset="false"
					headerText=""
					headerDesign="Standard"
					footerText=""
					mode="None"
					width="100%"
					includeItemInSelection="false"
					showUnread="false"
					noDataText=""
					showNoData="true"
					enableBusyIndicator="true"
					modeAnimationOn="true"
					showSeparators="All"
					swipeDirection="Both"
					growing="false"
					growingThreshold="20"
					growingTriggerText=""
					growingScrollToLoad="false"
					growingDirection="Downwards"
					rememberSelections="true"
					keyboardMode="Navigation"
					backgroundDesign="Solid"
					ariaLabelledBy=""
					validateFieldGroup=""
					select=""
					selectionChange=""
					swipe=""
					growingStarted=""
					growingFinished=""
					updateStarted=""
					updateFinished=""
					itemPress=""
					items="{path : 'Geschaefte>/results',
							sorter : {
								path : 'ges_besuche',
								descending: true
							}}">
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{Geschaefte>ges_name}" />
									<Text text="{Geschaefte>ges_stadt}" />
									<Text text="{Geschaefte>ges_besuche}" />
								</cells>
							</ColumnListItem>
						</items>
						<columns>
							<Column
								minScreenWidth="Phone"
								demandPopin="true" hAlign="Right">
								<Text text="Name" />
							</Column>
							<Column
								minScreenWidth="Phone"
								demandPopin="true"
								hAlign="Right">
								<Text text="Stadt" />
							</Column>
							<Column
								minScreenWidth="Phone"
								demandPopin="true"
								hAlign="Right">
								<Text text="Besuche" />
							</Column>
					</columns>
					<swipeContent>
						<Button
							text="Löschen"
							type="Reject"
							press="onDeleteShop" />
					</swipeContent> 
				</List>

            </content>
			<dependents>
				<core:Fragment fragmentName="mpn.PM.fragments.addShop" type="XML"/>
			</dependents>
			<customHeader></customHeader> <!-- sap.m.IBar -->
			<footer>
				 	<OverflowToolbar xmlns="sap.m"
						id="locationOftbaar"
						visible="true"
						width=""
						active="false"
						enabled="true"
						height=""
						design="Auto"
						press="">
							<content>
								<ToolbarSpacer xmlns="sap.m"></ToolbarSpacer>
								<Button xmlns="sap.m"
									text="hinzufügen"
									type="Default"
									width=""
									enabled="true"
									icon=""
									press="onAddLocation">
								</Button>
							</content>
					</OverflowToolbar>
			</footer> <!-- sap.m.IBar -->
			<subHeader></subHeader> <!-- sap.m.IBar -->
			<headerContent>
				<Button icon="sap-icon://refresh" press="onRefreshGeschaefte" />
			</headerContent>
			<landmarkInfo></landmarkInfo> <!-- sap.m.PageAccessibleLandmarkInfo -->
	</Page>

</core:View>