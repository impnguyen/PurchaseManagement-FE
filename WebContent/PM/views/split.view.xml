<core:View xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:u="sap.ui.unified"
		controllerName="mpn.PM.controller.split" xmlns:html="http://www.w3.org/1999/xhtml">

<Shell xmlns="sap.m"
	busy="false"
	busyIndicatorDelay="1000"
	visible="true"
	title="Purchase Manager"
	logo=""
	showLogout="true"
	headerRightText=""
	appWidthLimited="true"
	backgroundColor=""
	backgroundImage=""
	backgroundRepeat="false"
	backgroundOpacity="1"
	homeIcon=""
	validateFieldGroup=""
	logout="">
		<app>
		
			<SplitApp xmlns="sap.m"
				id="pmSplitApp"
				busyIndicatorDelay="0"
				defaultTransitionNameDetail="show"
				defaultTransitionNameMaster="slide"
				mode="PopoverMode"
				masterButtonText=""
				backgroundColor=""
				backgroundImage=""
				backgroundRepeat="false"
				backgroundOpacity="1"
				homeIcon="../img/pmIcon.jpg"
				initialDetail="purchaseView"
				initialMaster="menuListPage"
				masterNavigate=""
				afterMasterNavigate=""
				masterButton=""
				beforeMasterOpen=""
				afterMasterOpen=""
				beforeMasterClose=""
				afterMasterClose=""
				detailNavigate=""
				afterDetailNavigate=""
				orientationChange="">
					<masterPages>
							<Page xmlns="sap.m"
								id="menuListPage"
								busy="false"
								busyIndicatorDelay="1000"
								visible="true"
								title="Purchase Manager MenÃ¼"
								titleLevel="Auto"
								showNavButton="false"
								showHeader="true"
								showSubHeader="true"
								navButtonText=""
								navButtonTooltip=""
								enableScrolling="true"
								icon=""
								backgroundDesign="Transparent"
								navButtonType="Back"
								showFooter="true"
								contentOnlyBusy="false"
								floatingFooter="false"
								validateFieldGroup=""
								navButtonTap=""
								navButtonPress="">
									<content>
									
										<List xmlns="sap.m"
											id="menuList"
											busy="false"
											busyIndicatorDelay="1000"
											visible="true"
											fieldGroupIds=""
											inset="false"
											headerText=""
											headerDesign="Standard"
											footerText=""
											mode="None"
											width="100%"
											includeItemInSelection="false"
											showUnread="false"
											noDataText=""
											showNoData="true"
											enableBusyIndicator="true"
											modeAnimationOn="true"
											showSeparators="All"
											swipeDirection="Both"
											growing="false"
											growingThreshold="20"
											growingTriggerText=""
											growingScrollToLoad="false"
											growingDirection="Downwards"
											rememberSelections="true"
											keyboardMode="Navigation"
											backgroundDesign="Solid"
											ariaLabelledBy=""
											validateFieldGroup=""
											select=""
											selectionChange=""
											swipe=""
											growingStarted=""
											growingFinished=""
											updateStarted=""
											updateFinished=""
											itemPress=""
											items="{menu>/menuItems}">
												<items> <!-- sap.m.ListItemBase -->
													<StandardListItem xmlns="sap.m"
														type="Active"
														visible="true"
														unread="false"
														selected="false"
														title="{menu>title}"
														description="{menu>description}"
														icon="{menu>icon}"
														iconInset="true"
														iconDensityAware="true"
														activeIcon=""
														info=""
														infoState="None"
														adaptTitleSize="true"
														titleTextDirection="Inherit"
														infoTextDirection="Inherit"
														ariaLabelledBy=""
														validateFieldGroup=""
														tap=""
														detailTap=""
														press="onMenuPress"
														detailPress="">
													</StandardListItem>
												</items>
												<swipeContent></swipeContent> <!-- sap.ui.core.Control -->
										</List>
									
									</content> <!-- sap.ui.core.Control -->
							</Page>
					</masterPages> <!-- sap.ui.core.Control -->
					<detailPages>
						<mvc:XMLView viewName="mpn.PM.views.purchase" id="purchaseView"/> 
						<mvc:XMLView viewName="mpn.PM.views.overview" id="overviewView"/> 
						<mvc:XMLView viewName="mpn.PM.views.shop" id="shopView"/> 	
						<mvc:XMLView viewName="mpn.PM.views.stats" id="statsView"/> 				
					</detailPages> <!-- sap.ui.core.Control -->
			</SplitApp>
		
		</app> <!-- sap.ui.core.Control -->
</Shell>


	

</core:View>